<div class="form">
  <h2 class="title">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "body" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div>
      <%= f.label :password, "New password", class: "label" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input-field" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password", class: "label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field" %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", class: "primary-button" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
