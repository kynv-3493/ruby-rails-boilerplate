<div class="form ">
  <h2 class="title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "body"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div>
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
    </div>

    <div>
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input-field" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox-container">
        <div class="checkbox-wrapper">
          <%= f.check_box :remember_me, class: "checkbox" %>
        </div>
        <%= f.label :remember_me, class: "checkbox-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "primary-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
